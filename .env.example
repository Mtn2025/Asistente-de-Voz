# ============================================
# WARNING: ALL VARIABLES ARE REQUIRED
# NO DEFAULTS IN DOCKER-COMPOSE.YML
# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8000
HOST=0.0.0.0
APP_ENV=production

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SERVER=your_db_host
POSTGRES_PORT=5432
POSTGRES_DB=voice_db

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://your_redis_host:6379/0

# ============================================
# AI SERVICES
# ============================================
# Groq (LLM) - REQUIRED
GROQ_API_KEY=gsk_your_key_here

# Azure Speech (STT/TTS) - REQUIRED
AZURE_SPEECH_KEY=your_azure_key
AZURE_SPEECH_REGION=your_region

# ElevenLabs (TTS Alternative) - OPTIONAL
ELEVENLABS_API_KEY=

# ============================================
# TELEPHONY SERVICES (OPTIONAL)
# ============================================
# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Telnyx
TELNYX_API_KEY=

# ============================================
# SECURITY
# ============================================
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# ============================================
# SERVICE API ENDPOINTS (Default values - Optional)
# ============================================
# TELNYX_API_BASE=https://api.telnyx.com/v2
# GROQ_API_BASE=https://api.groq.com/openai/v1
# ELEVENLABS_API_BASE=https://api.elevenlabs.io/v1
